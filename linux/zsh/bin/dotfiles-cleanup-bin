#!/bin/sh

echo "Cleaning up scripts in $HOME/bin..."

# Iterate through files in $HOME/bin that start with 'dotfiles-'
for file in "$HOME/bin"/dotfiles-*; do
  # Skip if the file is 'dotfiles-cleanup' or 'dotfiles-cleanup-bin'
  if [ "$(basename "$file")" = "dotfiles-cleanup" ] || [ "$(basename "$file")" = "dotfiles-cleanup-bin" ]; then
    echo "Skipping $file"
    continue
  fi
  # Delete the file
  if [ -f "$file" ]; then
    echo "Deleting $file"
    rm -f "$file"
  fi
done

echo "Scripts cleanup completed."
