#!/bin/sh

set -eu

# THIS IS A BINARY/BASH SCRIPT TEMPLATE

if [ "$1" = "install" ]; then
  echo "[bin-template] Install Test"
elif [ "$1" = "update" ]; then
  echo "[bin-template] Update Test"
else
  echo "Usage: $0 {install|update}"
  echo "  install: Badabing badaboom"
  echo "  update: Whoopididoop"
  exit 1
fi
